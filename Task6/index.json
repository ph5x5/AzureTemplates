{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"envPrefix": {
			"type": "string"
		},
		"tmLocation": {
			"type": "string"
		},
		"skuName": {
			"type": "string"
		},
		"skuCapacity": {
			"type": "int"
		},
		"profileStatus": {
			"type": "string"
		},
		"routingMethod": {
			"type": "string"
		},
		"relativeName": {
			"type": "string"
		},
		"ttl": {
			"type": "int"
		},
		"protocol": {
			"type": "string"
		},
		"port": {
			"type": "int"
		},
		"path": {
			"type": "string"
		},
		"endpointStatus": {
			"type": "string"
		},
		"hpTemplateLink": {
			"type": "string"
		},
		"wsTemplateLink": {
			"type": "string"
		},
		"tmTemplateLink": {
			"type": "string"
		},
		"epTemplateLink": {
			"type": "string"
		}
	},
	"variables": {
		"hostingPlan": {
			"name": "[concat(parameters('envPrefix'), '-hp')]",
			"skuName": "[parameters('skuName')]",
			"skuCapacity": "[parameters('skuCapacity')]"
		},
		"webSite": {
			"name": "[parameters('relativeName')]"
		},
		"trafficManager": {
			"name": "[concat(parameters('envPrefix'), '-tm')]",
			"location" : "[parameters('tmLocation')]",
			"profileStatus": "[parameters('profileStatus')]",
			"routingMethod": "[parameters('routingMethod')]",
			"relativeName": "[parameters('relativeName')]",
			"ttl": "[parameters('ttl')]",
			"protocol": "[parameters('protocol')]",
			"port": "[parameters('port')]",
			"path": "[parameters('path')]"
		},
		"azureEndpoint": {
			"name": "[concat(parameters('envPrefix'), '-tm/endpoint')]",
			"location": "[parameters('tmLocation')]",
			"relativeName": "[parameters('relativeName')]",
			"endpointStatus": "[parameters('endpointStatus')]"
		}
	},
	"resources": [
		{
			"apiVersion": "2017-05-10",
			"name": "hpTemplate",
			"type": "Microsoft.Resources/deployments",
			"dependsOn": [	],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[parameters('hpTemplateLink')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"hostingPlan": {
						"value": "[variables('hostingPlan')]"
					}
				}
			}
		},
		{
			"apiVersion": "2017-05-10",
			"name": "wsTemplate",
			"type": "Microsoft.Resources/deployments",
			"dependsOn": [
				"hpTemplate"
			],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[parameters('wsTemplateLink')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"hostingPlan": {
						"value": "[variables('hostingPlan')]"
					},
					"webSite": {
						"value": "[variables('webSite')]"
					}
				}
			}
		},
		{
			"apiVersion": "2017-05-10",
			"name": "tmTemplate",
			"type": "Microsoft.Resources/deployments",
			"dependsOn": [	],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[parameters('tmTemplateLink')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"trafficManager": {
						"value": "[variables('trafficManager')]"
					}
				}
			}
		},
		{
			"apiVersion": "2017-05-10",
			"name": "epTemplate",
			"type": "Microsoft.Resources/deployments",
			"dependsOn": [
				"wsTemplate",
				"tmTemplate"
			],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[parameters('epTemplateLink')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"trafficManager": {
						"value": "[variables('trafficManager')]"
					},
					"azureEndpoint": {
						"value": "[variables('azureEndpoint')]"
					}
				}
			}
		}
	],
	"outputs": { }
}