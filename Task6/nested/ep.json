{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"trafficManager": {
			"type": "object"
		},
		"azureEndpoint": {
			"type": "object"
		},
		"locations": {
			"type": "array"
		}
	},
	"variables": { },
	"resources": [
		{
			"name": "[concat(parameters('azureEndpoint').name, '-', copyIndex())]",
			"type": "Microsoft.Network/trafficManagerProfiles/azureEndpoint",
			"location": "[parameters('azureEndpoint').location]",
			"apiVersion": "2015-11-01",
			"properties": {
				"targetResourceId": "[concat('Microsoft.Web/sites/', [parameters('relativeName')], copyIndex())]",
				"endpointStatus": "[parameters('azureEndpoint').endpointStatus]"
			},
			"copy": {
				"name": "epLoop",
				"count": "[length(parameters('locations'))]"
			}
		}
	],
	"outputs": { }
}