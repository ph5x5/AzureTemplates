{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"hostingPlan": {
			"type": "object"
		},
		"locations": {
			"type": "object"
		}
	},
	"variables": { },
	"resources": [
		{
			"name": "[concat(parameters('hostingPlan').name, copyIndex())]",
			"type": "Microsoft.Web/serverfarms",
			"location": "[parameters('locations')[copyIndex()]]",
			"apiVersion": "2016-03-01",
			"sku": {
				"name": "[parameters('hostingPlan').skuName]",
				"capacity": "[parameters('hostingPlan').skuCapacity]"
			},
			"properties": {
				"name": "[parameters('hostingPlan').name]"
			},
			"copy": {
				"name": "hpLoop",
				"count": "[length(variables('locations'))]"
			}
		}
	],
	"outputs": { }
}