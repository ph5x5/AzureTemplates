{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"envPrefix": {
			"type": "string"
		},
		"envLocation": {
			"type": "string",
			"defaultValue": "West Europe",
			"allowedValues": [
				"North Europe",
				"West Europe"
			]
		},
		"storageSku": {
			"type": "string",
			"defaultValue": "STANDARD_LRS",
			"allowedValues": [
				"STANDARD_GRS",
				"STANDARD_LRS",
				"STANDARD_RAGRS",
				"STANDARD_ZRS"
			]
		},
		"storageKind": {
			"type": "string",
			"defaultValue": "Storage",
			"allowedValues": [
				"Storage",
				"StorageV2",
				"BlobStorage"
			]
		},
		"storageAccessTier": {
			"type": "string"
		},
		"storageSupportHttpsTrafficOnly": {
			"type": "string"
		},
		"addressPrefix": {
			"type": "string"
		},
		"dnsServer": {
			"type": "string"
		},
		"subnetName": {
			"type": "string"
		},
		"subnetPrefix": {
			"type": "string"
		},
		"publicIPAllocationMethod": {
			"type": "string",
			"defaultValue": "Dynamic",
			"allowedValues": [
				"Dynamic",
				"Static"
				
			]
		},
		"privateIPAllocationMethod": {
			"type": "string",
			"defaultValue": "Dynamic",
			"allowedValues": [
				"Dynamic",
				"Static"
			]
		},
		"vmSize": {
			"type": "string"
		},
		"vmAdminUserName": {
			"type": "string"
		},
		"vmAdminPassword": {
			"type": "string"
		},
		"vmOSPublisher": {
			"type": "string"
		},
		"vmOSOffer": {
			"type": "string"
		},
		"vmOSSku": {
			"type": "string"
		},
		"vmOSVersion": {
			"type": "string",
			"defaultValue": "latest"
		},
		"vmDiskCaching": {
			"type": "string",
			"defaultValue": "ReadWrite",
			"allowedValues": [
				"ReadWrite",
				"ReadOnly",
				"None"
			]
		},
		"vmCreateOptions": {
			"type": "string",
			"defaultValue": "FromImage",
			"allowedValues": [
				"FromImage",
				"Empty",
				"Attach"				
			]
		},
		"storageTemplateLink": {
			"type": "string"
		},
		"vnetTemplateLink": {
			"type": "string"
		},
		"vmTemplateLink": {
			"type": "string"
		}
	},
	"variables": {
		"StorageAccount": {
			"Name": "[concat(parameters('envPrefix'),'storage')]",
			"Sku": "[parameters('storageSku')]",
			"Kind": "[parameters('storageKind')]",
			"Location": "[parameters('envLocation')]",
			"storageAccessTier": "[parameters('storageAccessTier')]",
			"storageSupportHttpsTrafficOnly": "[parameters('storageSupportHttpsTrafficOnly')]"
		},
		"VMStorageAccountContainerName": "vhds",
		"VirtualNetwork": {
			"Name": "[concat(parameters('envPrefix'),parameters('subnetName'))]",
			"Location": "[parameters('envLocation')]",
			"addressPrefix": "[parameters('addressPrefix')]",
			"dnsServer": "[parameters('dnsServer')]",
			"subnetName": "[parameters('subnetName')]",
			"subnetPrefix": "[parameters('subnetPrefix')]",
			"PIName": "[concat(parameters('envPrefix'),'-vm-pip')]",
			"DomainNameLabel": "[concat(parameters('envPrefix'),'dns1')]",
			"IFName": "[concat(parameters('envPrefix'),'-vm-if')]",
			"IFCfgName": "[concat(parameters('envPrefix'),'-vm-if-cfg')]",
			"PublicIPAllocationMethod": "[parameters('publicIPAllocationMethod')]",
			"PrivateIPAllocationMethod": "[parameters('privateIPAllocationMethod')]"
		},
		"VirtualMachine": {
			"Name": "[concat(parameters('envPrefix'),'-vm')]",
			"Location": "[parameters('envLocation')]",
			"StorageName": "[concat(parameters('envPrefix'),'-vm-storage')]",
			"VMSize": "[parameters('vmSize')]",
			"VMAdminUserName": "[parameters('vmAdminUserName')]",
			"VMAdminPassword": "[parameters('vmAdminPassword')]",
			"VMOSPublisher": "[parameters('vmOSPublisher')]",
			"VMOSOffer": "[parameters('vmOSOffer')]",
			"VMOSSku": "[parameters('vmOSSku')]",
			"VMOSVersion": "[parameters('vmOSVersion')]",
			"VMDiskCaching": "[parameters('vmDiskCaching')]",
			"VMCreateOption": "[parameters('vmCreateOptions')]",
			"InterfaceName": "[concat(parameters('envPrefix'),'-vm-if')]"
		}
	},
	"resources": [
		{
			"apiVersion": "2017-05-10",
			"name": "storageTemplate",
			"type": "Microsoft.Resources/deployments",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[parameters('storageTemplateLink')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"StorageAccount": {
						"value": "[variables('StorageAccount')]"
					}
				}
			}
		},
		{
			"apiVersion": "2017-05-10",
			"name": "vnetTemplate",
			"type": "Microsoft.Resources/deployments",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[parameters('vnetTemplateLink')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"VirtualNetwork": {
						"value": "[variables('VirtualNetwork')]"
					}
				}
			}
		},
		{
			"apiVersion": "2017-05-10",
			"name": "vmTemplate",
			"type": "Microsoft.Resources/deployments",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[parameters('vmTemplateLink')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"VirtualMachine": {
						"value": "[variables('VirtualMachine')]"
					}
				}
			}
		}
	],
	"outputs": { }
}